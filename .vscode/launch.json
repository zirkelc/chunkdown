{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "name": "Debug (tsx)",
      "request": "launch",
      "command": "pnpm tsx ${relativeFile}",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node-terminal",
      "name": "Debug+Watch (tsx)",
      "request": "launch",
      "command": "tsx watch ${fileBasename}",
      "cwd": "${fileDirname}"
    },
    {
      "type": "node",
      "name": "Vitest Test (run)",
      "request": "launch",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": ["run", "${relativeFile}"],
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "name": "Vitest Test (watch)",
      "request": "launch",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": ["${relativeFile}"],
      "smartStep": true,
      "console": "integratedTerminal"
    }
  ]
}
