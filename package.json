{
  "name": "chunkdown",
  "version": "1.0.0",
  "description": "A tree-based markdown text splitter that understands document structure to create semantically meaningful chunks for RAG applications",
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "types": "./src/index.ts",
  "exports": {
    "./ast": "./src/ast.ts",
    "./splitter": "./src/splitter.ts",
    "./markdown": "./src/markdown.ts"
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "prepublishOnly": "pnpm build && pnpm types",
    "dev": "pnpm --filter chunkdown-www dev",
    "test": "vitest",
    "build": "tsdown",
    "lint": "biome check . --write --no-errors-on-unmatched",
    "types": "TARBALL=$(pnpm pack | tail -n1) && attw $TARBALL && rm -f $TARBALL"
  },
  "keywords": [
    "markdown",
    "splitter",
    "textsplitter",
    "chunk",
    "embedding"
  ],
  "author": {
    "name": "Chris Cook",
    "email": "chris@zirkelc.dev",
    "url": "https://zirkelc.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zirkelc/chunkdown.git"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "dependencies": {
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-gfm": "^3.1.0",
    "mdast-util-heading-range": "^4.0.0",
    "mdast-util-to-markdown": "^2.1.2",
    "mdast-util-to-string": "^4.0.0",
    "micromark-extension-gfm": "^3.0.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@biomejs/biome": "2.1.3",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/mdast": "^4.0.4",
    "tsdown": "^0.14.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}